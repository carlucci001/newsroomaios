rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Banner images uploaded by advertisers
    match /banners/{advertiserId}/{allPaths=**} {
      // Anyone can read (banners are displayed publicly)
      allow read: if true;

      // Authenticated users can upload
      allow write: if request.auth != null;
    }

    // Business images for directory
    match /businesses/{businessId}/{allPaths=**} {
      // Anyone can read
      allow read: if true;

      // Authenticated users can upload
      allow write: if request.auth != null;
    }

    // User profile images
    match /users/{userId}/{allPaths=**} {
      // Anyone can read
      allow read: if true;

      // Users can upload their own
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Team member photos (admin-uploaded)
    match /team-photos/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
        && request.auth.token.platformAdmin == true;
    }
  }
}
